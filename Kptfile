metadata:
  name: .
packageMetadata:
  shortDescription: sample description
openAPI:
  definitions:
    io.k8s.cli.setters.repo:
      x-k8s-cli:
        setter:
          name: "repo"
          value: "https://github.com/viglesiasce/sample-app"
          isSet: true
    io.k8s.cli.setters.revision:
      x-k8s-cli:
        setter:
          name: "revision"
          value: "kpt"
          isSet: true
    io.k8s.cli.setters.context:
      x-k8s-cli:
        setter:
          name: context
          value: "cmd/frontend"
          isSet: true
    io.k8s.cli.setters.Dockerfile:
      x-k8s-cli:
        setter:
          name: dockerfile
          value: Dockerfile
